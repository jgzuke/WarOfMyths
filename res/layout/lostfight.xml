<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lostfight"
    android:layout_width="640dp"
    android:layout_height="360dp"
    android:layout_gravity="center"
    android:background="@drawable/menu_back2" >

    <TextView
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="180dp"
        android:textSize="25sp"
        android:text="LEVEL LOST"
        android:gravity="center"
        android:background="@drawable/menu_text280x70"/>
    <Button
        android:layout_marginTop="130dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="77dp"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:text="RETRY"
        android:id="@+id/retrybut"
        android:onClick="playRoundClickHandler"
		android:background="@drawable/menu_text170x100"/>
	<Button
        android:layout_marginLeft="393dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:text="MENU"
        android:id="@+id/menubut"
        android:onClick="toMenuClickHandler"
		android:background="@drawable/menu_text170x100"/>
    <GridLayout
        android:layout_marginLeft="8dp"
        android:layout_marginTop="260dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2">
        <Button
       		android:id="@+id/easy"
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="0"
		    android:layout_column="0"
		    android:textSize="15sp"
	        android:text="EASY"
	        android:onClick="difEasyClickHandler"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginBottom="10dp"/>
        <Button
       		android:id="@+id/med"
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="0"
		    android:layout_column="1"
		    android:textSize="17sp"
	        android:text="MEDIUM"
	        android:onClick="difMedClickHandler"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="10dp"/>
        <Button
       		android:id="@+id/hard"
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="0"
		    android:layout_column="2"
		    android:textSize="17sp"
	        android:text="HARD"
	        android:onClick="difHardClickHandler"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginBottom="10dp"
	        android:layout_marginLeft="10dp"/>
        <Button
       		android:id="@+id/ext"
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="0"
		    android:layout_column="3"
		    android:textSize="17sp"
	        android:text="EXTREME"
	        android:onClick="difExtClickHandler"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:layout_marginLeft="10dp"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginBottom="10dp"/>
        <Button
       		android:id="@+id/sick"
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="1"
		    android:layout_column="0"
		    android:textSize="17sp"
	        android:text="SICK"
	        android:onClick="sickClickHandler"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginBottom="10dp"/>
        <Button
       		android:id="@+id/hurt"
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="1"
		    android:layout_column="1"
		    android:textSize="17sp"
	        android:text="HURT"
	        android:onClick="hurtClickHandler"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginLeft="10dp"
	        android:layout_marginBottom="10dp"/>
        <Button
       		android:id="@+id/limit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@drawable/menu_text150x40"
            android:gravity="center"
            android:singleLine="false"
            android:text="LIMITED"
            android:onClick="limitedClickHandler"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:textSize="17sp" />
        <Button
       		android:id="@+id/regen"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_column="3"
            android:layout_row="1"
            android:background="@drawable/menu_text150x40"
            android:gravity="center"
            android:singleLine="false"
            android:text="REGENERATE"
            android:onClick="regenerateClickHandler"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="17sp" />

    </GridLayout>

</RelativeLayout>