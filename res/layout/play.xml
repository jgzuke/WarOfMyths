<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="640dp"
    android:layout_height="360dp"
    android:id="@+id/mainLayout"
    android:layout_gravity="center"
    android:background="#000000" >
    <Button
        android:id="@+id/back"
        android:layout_width="20dp"
		android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:onClick="toMenuClickHandler"
        android:background="@drawable/menu_text20x20"/>
    <Button
        android:id="@+id/play"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_marginTop="30dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="80dp"
        android:textSize="25sp"
        android:text="PLAY"
        android:gravity="center"
        android:onClick="playRoundClickHandler"
        android:background="@drawable/menu_text170x100"/>
    <ListView
        android:layout_toRightOf="@id/play"
        android:layout_width="300dp"
        android:layout_height="340dp"
        android:layout_marginTop="10dp"
        android:id="@+id/scroll"
		android:background="@drawable/menu_text300x340"/>

    <GridLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/play"
        android:columnCount="2"
        android:rowCount="4">
        <Button
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="0"
		    android:layout_column="0"
		    android:textSize="15sp"
	        android:text="EASY"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginBottom="10dp"/>
        <Button
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="1"
		    android:layout_column="0"
		    android:textSize="17sp"
	        android:text="MEDIUM"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginBottom="10dp"/>
        <Button
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="2"
		    android:layout_column="0"
		    android:textSize="17sp"
	        android:text="HARD"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginBottom="10dp"/>
        <Button
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="3"
		    android:layout_column="0"
		    android:textSize="17sp"
	        android:text="EXTREME"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"/>
        <Button
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="0"
		    android:layout_column="1"
		    android:textSize="17sp"
	        android:text="SICK"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginLeft="10dp"
	        android:layout_marginBottom="10dp"/>
        <Button
            android:layout_width="150dp"
        	android:layout_height="40dp"
		    android:layout_row="1"
		    android:layout_column="1"
		    android:textSize="17sp"
	        android:text="HURT"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:background="@drawable/menu_text150x40"
	        android:layout_marginLeft="10dp"
	        android:layout_marginBottom="10dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_marginBottom="10dp"
            android:layout_row="2"
            android:background="@drawable/menu_text150x40"
            android:gravity="center"
            android:singleLine="false"
            android:text="LIMITED"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:textSize="17sp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_column="1"
            android:layout_row="3"
            android:background="@drawable/menu_text150x40"
            android:gravity="center"
            android:singleLine="false"
            android:text="REGENERATE"
            android:textColor="#ffffff"
            android:layout_marginLeft="10dp"
            android:textSize="17sp" />

    </GridLayout>

</RelativeLayout>